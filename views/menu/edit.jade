extends ../layout.jade
block contenido
	div(class="col-md-5 center-block no-float top-space text-left")
		h1 Editar Producto
		form(method="POST" action="/menu/#{product.id}?_method=put" style="margin-top:1.5em;")
			
			div(class="form-group")
				label Genero
				input(type="number" name="genero" value="#{product.genero}" placeholder="Genero" class="form-control")
			div(class="form-group")
				label edad
				input(type="number" name="edad" value="#{product.edad}" placeholder="edad" class="form-control")
			div(class="form-group")
				label cig
				input(type="number" name="cig" value="#{product.cig}" placeholder="cig" class="form-control")
			div(class="form-group")
				label expa
				input(type="number" name="expa" value="#{product.expa}" placeholder="expa" class="form-control")
			div(class="form-group")
				label ip
				input(type="number" name="ip" value="#{product.ip}" placeholder="ip" class="form-control")
			div(class="form-group")
				label alcohol
				input(type="number" name="alcohol" value="#{product.alcohol}" placeholder="alcohol" class="form-control")
			div(class="form-group")
				label enfisema
				input(type="number" name="enfisema" value="#{product.enfisema}" placeholder="enfisema" class="form-control")
			div(class="form-group text-right")
				input(type="submit" class="btn btn-info" value="Guardar")